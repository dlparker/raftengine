@startuml
!pragma ratio 0.7
skinparam dpi 150
skinparam monochrome false
skinparam sequence {
  ArrowColor Black
  ActorBorderColor Black
  LifeLineBorderColor Black
  ParticipantFontSize 12
  Padding 10
}
skinparam legend {
  BackgroundColor #F5F5F5
  FontSize 11
}
title Raft Consensus Sequence (test_election_vote_once_1 Section 3)

participant "Node 1" as n1 order 10 #Lightgreen
participant "Node 2" as n2 order 20 #Lightgreen
participant "Node 3" as n3 order 30 #Lightgreen
n2 -> n1: RequestVote(term=2, lastIndex=1, lastTerm=2)
n2 -> n3: RequestVote(term=2, lastIndex=1, lastTerm=2)
note left of n1: Term: 2
n1 -> n2: VoteResponse(granted=True)
note right of n2: Log: index=2, term=2
n2 -> n2: Becomes LEADER

legend right
  <#GhostWhite,#GhostWhite>|      |= __Legend__ |
  |<#Lightgreen>| Raft Node |
  |FOLLOWER| Follower Role |
  |CANDIDATE| Candidate Role |
  |LEADER| Leader Role |
endlegend
@enduml
